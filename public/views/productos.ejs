<html lang="es">
  <head>
    <div class="container mt-3">
      <h1 class="alert alert-success">
        Usuario logueado: <span id="getUserEmail"></span>
        <button
          class="btn btn-warning float-right mt-2"
          onclick="location.href='/logout'"
        >
          Desloguear
        </button>
      </h1>
    </div>
    <div class="container mt-3">
      <button
        class="btn btn-warning float-right mt-2"
        onclick="location.href='/home'"
      >
        Home
      </button>
    </div>
    <form class="container mt-3" action="api/sessions/perfil" method="GET">
      <button
        class="btn btn-warning float-right mt-2"
        onclick='action="/api/sessions/perfil"'
      >
        Perfil
      </button>
    </form>
    <form class="container mt-3" action="/api/carrito" method="GET">
      <button
        class="btn btn-warning float-right mt-2"
        onclick='action="/api/carrito"'
      >
        Ver Carrito
      </button>
    </form>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
      integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="css/estilos.css" />
  </head>
  <body>
    <div class="container mt-3">
      <!-- TABLA DE PRODUCTOS -->
      <div class="jumbotron">
        <h1>Vista de Productos</h1>
        <div class="table-responsive">
          <table class="table table-dark">
            <tr>
              <th>ID</th>
              <th>Foto</th>
              <th>Nombre</th>
              <th>Precio</th>
            </tr>
            <% for (var i = 0; i < response.length; i++) { %>
            <tr>
              <td><%= response[i]._id %></td>
              <td><%= response[i].LinkFoto %></td>
              <td><%= response[i].Nombre %></td>
              <td><%= response[i].Precio %></td>
            </tr>
            <% } %>
          </table>
          <table class="table table-dark" id="vista_productos"></table>
        </div>
      </div>
    </div>
    <script src="index.js">
      getSessionUserName()
    </script>
  </body>
</html>
