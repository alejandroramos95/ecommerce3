<html lang="es">
  <head>
    <div class="container mt-3">
      <h1 class="alert alert-success">
        Usuario logueado: <%= profileData.nombre %>
        <button
          class="btn btn-warning float-right mt-2"
          onclick="location.href='/logout'"
        >
          Desloguear
        </button>
      </h1>
    </div>
    <div class="container mt-3">
      <button
        class="btn btn-warning float-right mt-2"
        onclick="location.href='/home'"
      >
        Home
      </button>
    </div>
    <form class="container mt-3" action="/api/productos" method="GET">
      <button
        class="btn btn-warning float-right mt-2"
        onclick='action="/api/productos"'
      >
        Ver Productos
      </button>
    </form>
    <form class="container mt-3" action="/api/carrito" method="GET">
      <button
        class="btn btn-warning float-right mt-2"
        onclick='action="/api/carrito"'
      >
        Ver Carrito
      </button>
    </form>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
      integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="css/estilos.css" />
  </head>
  <body>
    <div class="container mt-3">
      <!-- DATOS USUARIO LOGUEADO -->
      <div class="jumbotron">
        <h1>DATOS DE SU CUENTA</h1>
        <div class="table-responsive">
          <table class="table table-dark" BORDER="1">
            <TR>
              <TH>AVATAR</TH>
              <TD><%= profileData.avatar %></TD>
            </TR>
            <TR>
              <TH>EMAIL</TH>
              <TD><%= profileData.email %></TD>
            </TR>
            <TR>
              <TH>NOMBRE</TH>
              <TD><%= profileData.nombre %></TD>
            </TR>
            <TR>
              <TH>EDAD</TH>
              <TD><%= profileData.edad %></TD>
            </TR>
            <TR>
              <TH>DIRECCION</TH>
              <TD><%= profileData.direccion %></TD>
            </TR>
            <TR>
              <TH>CONTACTO</TH>
              <TD><%= profileData.contacto %></TD>
            </TR>
          </table>
          <table class="table table-dark" id="vista_productos"></table>
        </div>
      </div>
    </div>
    <script src="index.js">
      getSessionUserName()
    </script>
  </body>
</html>
